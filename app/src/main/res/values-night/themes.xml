<resources>

    <style name="Theme.WeatherApp" parent="Base.Theme.WeatherApp">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/gray_353</item>
        <item name="android:textColor">@color/gray_B2B</item>

        <!-- Snackbar -->
        <item name="snackbarStyle">@style/SnackbarDarkTheme</item>
        <item name="snackbarButtonStyle">@style/MaterialSnackbarTextButtonDarkTheme</item>
        <item name="snackbarTextViewStyle">@style/MaterialSnackbarTextViewDarkTheme</item>
    </style>

    <style name="SnackbarDarkTheme" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="MaterialSnackbarTextButtonDarkTheme" parent="@style/Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">@color/gray_B2B</item>
    </style>

    <style name="MaterialSnackbarTextViewDarkTheme" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/gray_B2B</item>
    </style>

</resources>